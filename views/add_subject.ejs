<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Add Subject</title>
  </head>
  <body>
    <h1>Add Subject to Student</h1>
    <h3><a href="/student">show all student</a></h3>
    <table style="width:50%" border="1">
      <tr>
        <th>First Name</th>
        <td><%= dStudent.first_name %></td>
      </tr>
      <tr>
        <th>Last Name</th>
        <td><%= dStudent.last_name %></td>
      </tr>
      <tr>
        <th>Email</th>
        <td><%= dStudent.email %></td>
      </tr>
    </table>
    <form class="" action="/student/<%= dStudent.id %>/addSubject" method="POST">
      <p>Choose Subject:</p>
      <select name="SubjectId">
      <% dSubject.forEach((subject) => { %>
        <option value="<%= subject.id %>"><%= subject.subject_name %></option>
      <% }) %>
      </select><br><br>
      <input type="submit" value="Save">
    </form>

  </body>
</html>
