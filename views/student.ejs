<% include ./partials/header.ejs%>

<div class="container">
    <h2>Students Data</h2>
    <p><a href="/students/addStudent">add student</a></p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Action</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            <% students.forEach(function(student){ %>
                <tr>
                    <td><%= student.id %></td>
                    <td><%= student.first_name %></td>
                    <td><%= student.last_name %></td>
                    <td><%= student.email %></td>
                    <td><a href="/students/<%- student.id%>/addsubject">Add Subject</a></td>
                    <td><a href="">Edit |</a></td>
                    <td><a href="">Delete</a></td>
                </tr>
            <% })%>

        </tbody>
    </table>
</div>

<% include ./partials/footer.ejs%>