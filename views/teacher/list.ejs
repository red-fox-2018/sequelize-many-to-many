<%- include ../partial/header.ejs%>

  <div class="container mt-5">
    <a href="/teachers/add" class="btn btn-primary">Add Teacher</a>
    <div class="table-responsive-sm">
      <table class="table mt-2">
        <thead class="thead bg-info text-white">
          <tr>
            <th>No</th>
            <th>First name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Subject</th>
            <th>Action</th>
          </tr>
        </thead>

        <tbody>
          <% Teachers.forEach((teacher, i) => { %>
            <tr>
              <td><%= i+1 %></td>
              <td> <%= teacher.first_name%> </td>
              <td> <%= teacher.last_name%> </td>
              <td> <%= teacher.email %> </td>
              <td> <%= teacherHelpers.assignSubject(teacher.Subject) %> </td>
              <td>
                <a href='/teachers/edit/<%= teacher.id %>'>Edit</a> |
                <a class="text-danger" href='/teachers/delete/<%= teacher.id %>' onclick="return confirm('delete this teacher?')"> delete</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

<%- include ../partial/footer.ejs%>
