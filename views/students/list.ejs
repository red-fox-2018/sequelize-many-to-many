<%- include ../partial/header.ejs%>

    <div class="container mt-5">
      <a href="/students/add-student" class="btn btn-primary">Add Student</a>
      <div class="table-responsive-sm">
        <table class="table mt-2">
          <thead class="thead bg-info text-white">
            <tr>
              <th>No</th>
              <th>First name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Action</th>
              <th>Options</th>
            </tr>
          </thead>

          <tbody>
            <% Students.forEach((student, i) => { %>
              <tr>
                <td><%= i+1 %></td>
                <td> <%= student.first_name%> </td>
                <td> <%= student.last_name%> </td>
                <td> <%= student.email %> </td>
                <td> <a href='/students/<%= student.id %>/addsubject'>Add Subject</a> </td>
                <td>
                  <a href='/students/edit-student/<%= student.id %>'>Edit</a> |
                  <a class="text-danger" href='/students/delete/<%= student.id %>' onclick="return confirm('delete this student?')"> delete</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

<%- include ../partial/footer.ejs%>
