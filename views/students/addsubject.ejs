<!DOCTYPE html>
<html>

<head>
  <% include ../partials/head %>
</head>

<body>
  <div class="container">
    <% include ../partials/header %>

      <% if (typeof err !== 'undefined') { %>
        <div class="alert alert-danger" role="alert">
          <%= err.message %>
        </div>
        <% } %>

          <h2>Add Subject</h2>
          <div class="row">

            <div class="col-md-6">

              <div class="well">


                <form class="form" action="/students/<%= student.id %>/addsubject" method="POST">

                  <div class="row">
                    <div class="col-xs-6">
                      <div class="form-group">
                        <label for="first_name">First Name</label>
                        <input type="text" name="first_name" value="<%=student.first_name%>" class="form-control" required>
                      </div>
                    </div>
                    <div class="col-xs-6">
                      <div class="form-group">
                        <label for="last_name">Last Name</label>
                        <input type="text" name="last_name" value="<%=student.last_name%>" class="form-control" required>
                      </div>
                    </div>
                  </div>


                  <div class="row">
                    <div class="col-xs-6">
                      <div class="form-group">
                        <label for="gender">Gender</label>
                        <input type="text" name="gender" value="<%=student.gender%>" class="form-control" required>
                      </div>
                    </div>
                    <div class="col-xs-6">
                      <div class="form-group">
                        <label for="birthday">Birthday</label>
                        <input type="text" name="birthday" value="<%=student.birthday%>" class="form-control" required>
                      </div>
                    </div>
                  </div>


                  <div class="row">
                    <div class="col-xs-6">
                      <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" name="email" value="<%=student.email%>" class="form-control" required>
                      </div>
                    </div>
                    <div class="col-xs-6">
                      <div class="form-group">
                        <label for="phone">Phone</label>
                        <input type="text" name="phone" value="<%=student.phone%>" class="form-control" required>
                      </div>
                    </div>
                  </div>


                  <div class="form-group">
                    <label for="SubjectId">Subject</label>
                    <select class="form-control" name="SubjectId" autofocus required>
                        <option value="">Pick the subject</option>
                            <% subjects.forEach(subject => { %>
                        <option value="<%= subject.id %>"><%= subject.name %></option>
                            <% }) %>
                          </select>
                  </div>

                  <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a href="/students" class="btn btn-default">Cancel</a>
                  </div>

                </form>

              </div>

            </div>

          </div>
  </div>
</body>

<footer>
  <% include ../partials/footer %>
</footer>

</html>
