<%- include ../partial/header.ejs%>

  <div class="container mt-5">

    <% if(error){ %>
      <%- include ../partial/error-message.ejs%>
    <% } %>

    <form action="/students/edit-student/<%= student.id %>" method="POST" >
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="fname">First Name :</label>
          <input type="text" id="fname" class="form-control" name="firstname" value="<%= student.first_name %>"> <br/>
        </div>

        <div class="form-group col-md-6">
          <label for="lname">Last Name :</label>
          <input type="text" id="lname" class="form-control" name="lastname" value="<%= student.last_name %>"> <br/>
        </div>
      </div>

      <div class="form-group">
        <label for="email">Email :</label>
        <input type="text" id="email" class="form-control" name="email" value="<%= student.email %>"> <br/>
      </div>

      <input type="submit" class="btn btn-primary" value="Submit">
    </form>
  </div>

<%- include ../partial/footer.ejs%>
