<!DOCTYPE html>
<html>

<head>
  <% include ../partials/head %>
</head>

<body>
  <div class="container">
    <% include ../partials/header %>
      <h2>
        Give Score
      </h2>
      <hr>
        <form class="form" action="/subjects/<%= subject.id %>/score" method="POST">
        <% if (students.length) { %>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>No.</th>
                <th>Student Name</th>
                <th>Subject</th>
                <th>Score</th>
              </tr>
            </thead>
            <tbody>
              <% students.forEach((student, index) => { %>
                <tr>
                  <td>
                    <%= index + 1 %>
                  </td>
                  <td>
                    <%= student.getFullName() %>
                  </td>
                  <td>
                    <%= subject.name %>
                  </td>
                  <td>
                    <input type='number' name='score' min='0' max='100' class='form-control' required>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>

          <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="/subjects" class="btn btn-default">Cancel</a>
          </div>
      </form>
      <% } else { %>
        <p class="text-muted text-center">This subject doesn't have any Score</p>
        <% } %>
          <a href="/subjects" class="btn btn-primary">&larr; Back to subjects</a>
  </div>
</body>

<footer>
  <% include ../partials/footer %>
</footer>

</html>
