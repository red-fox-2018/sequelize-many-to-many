<!DOCTYPE html>
<html>
<head>
    <title>Page Title</title>
</head>
<body>
    <style>
        body {
            text-align: center;
    
        }
        table {
            margin: auto;
        }
    </style>
    <h1>All Subjects Data</h1>
    <table border="1">
        <tr>
            <th>Id</th>
            <th>Subject Name</th>
            <th>Students</th>
            <th>Actions</th>
        </tr>
        <% subjects.forEach(subject=>{ %>
            <tr>
                <td ><%= subject.id%></td>
                <td ><%=  subject.name   %></td>
                <td>
                <%  subject.Students.forEach(student=>{ %>
                <% let fullName = student.first_name + ' ' + student.last_name%>
                     <p><%= fullName%></p>
                <%  })   %>
                    </td>
                <td ><a href="/subjects/<%=subject.id%>/enrolledstudents">Enrolled Students</a></td>
                </tr>
                
       <% }) %>
    </table>
</body>
</html>