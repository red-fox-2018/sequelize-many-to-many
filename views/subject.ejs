<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Subject's Page</title>
  </head>
  <body>
    <h1>Subjects Data</h1>
    <h3><a href="/subject/add">add subject</a></h3>
    <table style="width:80%" border="1">
      <tr>
        <th>No.</th>
        <th>Subject Name</th>
        <th>Teachers</th>
        <th>Actions</th>
        <th>Options</th>
      </tr>
      <% subjectData.forEach((subjects) => { %>
      <tr>
        <td><%= subjects.id %></td>
        <td><%= subjects.subject_name %></td>
        <td><% subjects.Teachers.forEach((teacher, i) => { %>
          <p><%= (i+1) + '. ' + teacher.first_name + ' ' + teacher.last_name %></p>
        <% }) %></td>
        <td><a href="/subject/<%= subjects.id %>/enrolledStudents">Enrolled Students</a></td>
        <td><a href=" /subject/edit/<%= subjects.id %>">Edit</a> | <a href="/subject/delete/<%= subjects.id %>" onclick="return confirm('Delete this subject?')"> Delete </a></td>
      </tr>
      <% }) %>
    </table>
    <p><a href="/">Back</a></p>
  </body>
</html>
